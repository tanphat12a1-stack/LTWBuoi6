
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-2">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <h5 class="fw-bold text-center mt-3">ĐĂNG NHẬP</h5>
                    <div class="card-body">

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center">
                                @ViewBag.Error
                            </div>
                        }

                        <form method="post" class="row g-3 align-items-center">
                            <div class="col-md-4 text-start">
                                <label for="soDienThoai" class="col-form-label">Số điện thoại</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" id="soDienThoai" name="soDienThoai" class="form-control" required />
                            </div>

                            <div class="col-md-4 text-start">
                                <label for="matKhau" class="col-form-label">Mật khẩu</label>
                            </div>
                            <div class="col-md-8">
                                <input type="password" id="matKhau" name="matKhau" class="form-control" required />
                            </div>

                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary text-light">Đăng nhập</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


