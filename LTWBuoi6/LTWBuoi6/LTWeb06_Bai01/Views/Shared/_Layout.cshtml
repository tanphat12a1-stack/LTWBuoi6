<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/CSS.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item me-3"><a class="nav-link" href="@Url.Action("SanPhamTheoLoai","SanPham")">Home</a></li>
                        <li class="nav-item dropdown me-3">
                            <a class="nav-link dropdown-toggle" href="#" id="thongTinDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Thông tin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="thongTinDropdown">
                                <li>
                                    <a class="dropdown-item" href="@(Session["KhachHang"] != null ? Url.Action("GioHang","KhachHang") : Url.Action("DangNhap","KhachHang"))">
                                        Xem giỏ hàng
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@(Session["KhachHang"] != null ? Url.Action("LichSuGiaoDich","KhachHang") : Url.Action("DangNhap","KhachHang"))">
                                        Lịch sử giao dịch
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item me-3"><a class="nav-link" href="#">Diễn đàn</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Liên hệ</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="bg-light py-2">
            <div class="container d-flex justify-content-end">
                @if (Session["KhachHang"] != null)
                {
                    var kh = Session["KhachHang"] as LTWeb06_Bai01.Models.KhachHang;
                    <span class="me-3">Chào, @kh.TenKhachHang</span>
                    <a href="@Url.Action("DangXuat","KhachHang")" class="btn btn-danger btn-sm text-light">Đăng xuất</a>
                }
                else
                {
                    <a href="@Url.Action("DangKy","KhachHang")" class="btn btn-danger me-3">Đăng ký ngay</a>
                    <a href="@Url.Action("DangNhap","KhachHang")" class="btn btn-primary">Login</a>
                }
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <div class="row">
            <div class="col-3">
                <h4 class="text-danger fw-bold">Danh mục sách</h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item">
                        <a href="@Url.Action("SanPhamTheoLoai","SanPham")" class="text-decoration-none">Tất cả</a>
                    </li>
                    @foreach (var loai in ViewBag.Loai as List<LTWeb06_Bai01.Models.Loai>)
                    {
                        <li class="list-group-item">
                            <a href="@Url.Action("SanPhamTheoLoai","SanPham", new { maloai = loai.MaLoai })" class="text-decoration-none">
                                @loai.TenLoai
                            </a>
                        </li>
                    }
                </ul>

                <h4 class="text-danger fw-bold mt-4">Danh mục giá</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="@Url.Action("SanPhamTheoLoai","SanPham", new { gia = "0-30000" })" class="text-decoration-none">Dưới 30,000₫</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("SanPhamTheoLoai","SanPham", new { gia = "30000-60000" })" class="text-decoration-none">30,000₫ - 60,000₫</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("SanPhamTheoLoai","SanPham", new { gia = "60000-100000" })" class="text-decoration-none">60,000₫ - 100,000₫</a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("SanPhamTheoLoai","SanPham", new { gia = "100000" })" class="text-decoration-none">Trên 100,000₫</a>
                    </li>
                </ul>
            </div>

            <div class="col-9">@RenderBody()</div>
        </div>
    </div>

    <footer class="bg-success text-light text-center p-3 mt-4">
        <p>&copy; 2025 Nhà sách Online</p>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
