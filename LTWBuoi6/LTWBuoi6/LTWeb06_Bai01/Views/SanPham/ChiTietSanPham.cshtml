@model LTWeb06_Bai01.Models.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <table class="table table-bordered align-middle">
        <thead class="table-success text-center">
            <tr>
                <th style="width:120px;">Mã sản phẩm</th>
                <th style="width:200px;">Tên sản phẩm</th>
                <th style="width:150px;">Giá</th>
                <th>Giới thiệu sách</th>
                <th style="width:180px;">Hình ảnh</th>
            </tr>
        </thead>
        <tbody>
            <tr class="text-center">
                <td>@Model.MaSP</td>
                <td>@Model.TenSP</td>
                <td class="text-danger fw-bold">@Model.Gia.ToString("N0") đ</td>
                <td class="text-start" style="white-space:normal; word-wrap:break-word;">@Model.GhiChu</td>
                <td>
                    <img src="~/Images/@Model.Hinh" alt="@Model.TenSP" style="max-height:150px; object-fit:contain;" />
                </td>
            </tr>
        </tbody>
    </table>
    <div class="mt-3">
        <a href="@Url.Action("SanPhamTheoLoai","SanPham")" class="btn btn-outline-primary">Quay lại</a>
    </div>
</body>
</html>


